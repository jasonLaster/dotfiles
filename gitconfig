[user]
	name = Jason Laster

[alias]
	a = add -p
    ac = !git add -p && git commit --amend
  b = branch
    ba = branch -a
    bc = rev-parse --abbrev-ref HEAD
    bd = branch -D
    br = branch -r
  ci = commit
    cia = commit --amend
    cim	= commit -m
  cl = clean
    clf = clean -f
  co = checkout
    cob = checkout -b
    cop = checkout -p
    cot = checkout --track
  cp = cherry-pick
  d = diff
    ds  = diff --stat
    dc  = diff --cached
    dcs = diff --cached --stat
    dm  = diff master
    dms = diff master --stat
	f = fetch
	fp = format-patch --stdout
  g = grep --line-number -p -A2
  l = log --graph --decorate
    lp = log -p --date=short
    lpj = log -p --date=short --author jlaster HEAD~20..HEAD

    ls = log --stat
    lh = log --date=short --pretty=oneline HEAD~100..HEAD
    lhs = log --date=short --stat HEAD~100..HEAD
    lhj = log --date=short --author jlaster --stat HEAD~20..HEAD
  rpull = pull --rebase
	r = rebase
    rc = rebase --continue
    rs = rebase --abort
    ra = rebase --abort
    ri = rebase -i
	re = reset
    reh = reset HEAD
    rehh = reset HEAD~1 --hard
  rmc = rm --cached
  sh = show --
    shs = log -1 --stat
  st = status
    stm = status --untracked=no
    s = stash
    sa = stash apply

[core]
	pager = less -r

[color]
  ui = true
